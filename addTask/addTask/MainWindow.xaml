<Window x:Class="addTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:addTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFCBC6A4">
    <Grid>
        <TextBox x:Name="txtBoxTask" HorizontalAlignment="Left" Height="28" Margin="10,46,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="293"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="340,46,0,0" VerticalAlignment="Top" Width="80" Height="28" Click="btnAdd_Click"/>
        <ListBox x:Name="listTask" HorizontalAlignment="Left" Height="322" Margin="529,46,0,0" VerticalAlignment="Top" Width="218"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="340,104,0,0" VerticalAlignment="Top" Width="80" Height="31" Visibility="Hidden" Click="btnSave_Click"/>

    </Grid>
</Window>
